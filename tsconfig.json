{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                     
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true, 
      "resolveJsonModule": true,                
      "outDir": "./dist",
      "lib": ["es2015", "dom", "esnext"],       
      "types": ["node"]                         
    },
    "include": [
      "**/*.ts",
      "*.json"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  